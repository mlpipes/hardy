# Hardy Auth - Environment Variables Configuration
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5434/hardy_auth"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3001"
NODE_ENV="development"

# AWS SES Email Service Configuration (Optional - for production email sending)
# If not configured, emails will be logged to console for development
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_SES_REGION="us-east-1"
AWS_SES_FROM_EMAIL="noreply@your-domain.com"

# Security Configuration
# Generate a secure random secret for production
HARDY_AUTH_SECRET="your-32-character-secret-key-here"

# SMTP Configuration (Email service fallback for AWS SES)
# Configure with your preferred SMTP service for backup email delivery
SMTP_HOST="smtp.gmail.com"  # Example: Gmail SMTP
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="Hardy Auth Service"
SMTP_FROM_EMAIL="noreply@your-domain.com"

# Session Configuration
SESSION_MAX_AGE="2592000"  # 30 days in seconds

# Development Configuration
DEBUG_EMAIL_CONSOLE="true"  # Log emails to console in development