{
  "name": "@hardy/auth-service",
  "version": "1.0.0",
  "description": "Hardy Auth Service - Compliance-first authentication service built on Better Auth with HIPAA, SOC 2 Type II, and HITRUST readiness for healthcare applications",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "db:setup": "tsx src/scripts/db-setup.ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:rls": "tsx src/scripts/setup-rls.ts",
    "create-admin": "tsx src/scripts/create-admin-user.ts",
    "docker:build": "docker build -t hardy/auth-service .",
    "docker:run": "docker run -p 3001:3000 hardy/auth-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "hardy:setup": "chmod +x scripts/setup-hardy-auth-db.sh && scripts/setup-hardy-auth-db.sh",
    "hardy:migrate": "psql -U auth_service -d hardy_auth -h localhost -p 5434 -f scripts/migrate-to-hardy-auth.sql",
    "hardy:status": "docker-compose ps && docker exec hardy-auth-db psql -U auth_service -d hardy_auth -c 'SELECT COUNT(*) as tables FROM information_schema.tables WHERE table_schema = '\"'\"'public'\"'\"';'"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.893.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@mendable/firecrawl-js": "^1.21.1",
    "@prisma/client": "^6.12.0",
    "@tanstack/react-query": "^5.17.0",
    "@trpc/client": "^11.0.0",
    "@trpc/next": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.4",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jose": "^5.1.3",
    "lucide-react": "^0.294.0",
    "nanoid": "^5.0.4",
    "next": "^14.2.5",
    "nodemailer": "^6.10.1",
    "prisma": "^6.12.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.8.0",
    "speakeasy": "^2.0.0",
    "superjson": "^2.2.1",
    "twilio": "^5.0.4",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.18",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.2.5",
    "jsdom": "^23.0.1",
    "msw": "^2.0.11",
    "postcss": "^8.5.6",
    "supertest": "^6.3.3",
