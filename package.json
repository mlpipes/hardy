{
  "name": "@mlpipes/auth-service",
  "version": "1.0.0",
  "description": "MLPipes Auth Service - Open-source enterprise authentication with HIPAA, SOC 2 Type II, and HITRUST readiness for healthcare applications",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "db:setup": "tsx src/scripts/db-setup.ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:rls": "tsx src/scripts/setup-rls.ts",
    "docker:build": "docker build -t mlpipes/auth-service .",
    "docker:run": "docker run -p 3001:3000 mlpipes/auth-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "better-auth": "^1.3.4",
    "@prisma/client": "^6.12.0",
    "prisma": "^6.12.0",
    "@trpc/server": "^11.0.0",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/next": "^11.0.0",
    "@tanstack/react-query": "^5.17.0",
    "zod": "^3.22.4",
    "superjson": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "twilio": "^5.0.4",
    "nodemailer": "^6.9.8",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "recharts": "^2.8.0",
    "date-fns": "^2.30.0",
    "jose": "^5.1.3",
    "nanoid": "^5.0.4",
    "uuid": "^9.0.1"
  },
